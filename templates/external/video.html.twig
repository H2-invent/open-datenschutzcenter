{% extends 'base.html.twig' %}
{% trans_default_domain 'external' %}
{% block CTA %}

{% endblock %}

{% block body %}
    <div class="card card-body">
        <h2 class="h2-responsive">{% trans with {'{video}': team.video} %}videoConference.about{% endtrans %}</h2>
        <div id="meet"></div>
        <p class="note-info text-center">{% trans with {'{video}': team.video} %}videoConference.disclaimer{% endtrans %}</p>
    </div>
{% endblock %}

{% block javascripts %}
    {% if team.video %}
        <script src='https://{{ team.video }}/external_api.js'></script>
        <script>
            const domain = '{{ team.video }}';
            const options = {
                roomName: '{{ hash }}',
                configOverwrite: {
                    startWithAudioMuted: true,
                    startWithVideoMuted: true
                },
                height: 700,
                userInfo: {
                    name: '{{ app.user.username }}'
                },
                parentNode: document.querySelector('#meet')
            };
            const api = new JitsiMeetExternalAPI(domain, options);
        </script>
    {% endif %}
{% endblock %}
