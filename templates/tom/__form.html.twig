{% trans_default_domain 'tom' %}
{{ form_start(form, {attr: {class: not activ or tom.approved ? 'disabled'}}) }}
    <fieldset>
        {% if activTitel %}
            {{ form_row(form.titel) }}
        {% endif %}
        {{ form_row(form.beschreibung) }}
    </fieldset>
    <fieldset>
        <legend>{% trans %}lawParagraph.pseudo.title{% endtrans %}</legend>
        {{ form_row(form.tomPseudo) }}
    </fieldset>
    <fieldset>
        <legend>{% trans %}lawParagraph.confidentiality.title{% endtrans %}</legend>
        {{ form_row(form.tomZutrittskontrolle) }}
        {{ form_row(form.tomZugangskontrolle) }}
        {{ form_row(form.tomZugriffskontrolle) }}
        {{ form_row(form.tomBenutzerkontrolle) }}
        {{ form_row(form.tomSpeicherkontrolle) }}
        {{ form_row(form.tomTrennbarkeit) }}
    </fieldset>
    <fieldset>
        <legend>{% trans %}lawParagraph.integrity.title{% endtrans %}</legend>
        {{ form_row(form.tomDatenintegritaet) }}
        {{ form_row(form.tomTransportkontrolle) }}
        {{ form_row(form.tomUebertragungskontrolle) }}
        {{ form_row(form.tomEingabekontrolle) }}
        {{ form_row(form.tomZuverlaessigkeit) }}
        {{ form_row(form.tomAuftragskontrolle) }}
    </fieldset>
    <fieldset>
        <legend>{% trans %}lawParagraph.availability.title{% endtrans %}</legend>
        {{ form_row(form.tomVerfuegbarkeitskontrolle) }}
        {{ form_row(form.tomWiederherstellbarkeit) }}
    </fieldset>
    <fieldset>
        <legend>{% trans %}lawParagraph.evaluation.title{% endtrans %}</legend>
        {{ form_row(form.tomAudit) }}
    </fieldset>
    {{ form_row(form.save, {row_attr: {class: 'form-buttons'}}) }}
    {{ form_rest(form) }}
{{ form_end(form) }}
