                    <li class="{{ app.request.attributes.get('_route') == 'tom' ? 'active' }}">
                        <a href="{{ path('tom') }}">{% trans %}toms{% endtrans %}</a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'vvt' ? 'active' }}">
                        <a href="{{ path('vvt') }}">{% trans %}processings{% endtrans %}</a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'loeschkonzept' ? 'active' }}">
                        <a href="{{ path('app_loeschkonzept_index') }}">{% trans %}deleteConcepts{% endtrans %}</a>
