{% trans_default_domain 'base' %}

<!-- Sidebar  -->
<nav id="sidebar" class="scrollbar-deep-purple bordered-deep-purple thin overflow-auto">
    <div class="sidebar-header">
        <a href="{{ path('dashboard') }}">
            <img alt="logo" src="{{ asset('logo.png') }}" class="img-fluid" />
        </a>
    </div>
{% if app.user is defined and app.user is not null %}
    <ul class="list-unstyled components ">
        {% if app.user.TeamDsb is not empty %}
            <li class="{{ app.request.attributes.get('_route') == 'dsb' ? 'active' }}">
                <a href="{{ path('dsb') }}">{% trans %}externalDsb{% endtrans %}</a>
            </li>
        {% endif %}
        {% if app.user.team %}
            <li class="{{ app.request.attributes.get('_route') == 'dashboard' ? 'active' }}">
                <a href="{{ path('dashboard') }}">{% trans %}dashboard{% endtrans %}</a>
            </li>
            <li class="{{ app.request.attributes.get('_route') == 'assign' ? 'active' }}">
                <a href="{{ path('assign') }}">{% trans %}myAssignments{% endtrans %}</a>
            </li>
            <li class="{{ app.request.attributes.get('_route') == 'tasks' ? 'active' }}">
                <a href="{{ path('tasks') }}">{% trans %}tasks{% endtrans %}</a>
            </li>
            <li>
                <a href="#elementsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">{% trans %}elements{% endtrans %}</a>
                <ul class="collapse list-unstyled" id="elementsSubmenu">
                    <li class="{{ app.request.attributes.get('_route') == 'audit_tom' ? 'active' }}">
                        <a href="{{ path('audit_tom') }}">{% trans %}auditQuestions{% endtrans %}</a>
