                    <li class="{{ app.request.attributes.get('_route') == 'datenweitergabe' ? 'active' }}">
                        <a href="{{ path('datenweitergabe') }}">{% trans %}dataTransfers{% endtrans %}</a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'auftragsverarbeitung' ? 'active' }}">
                        <a href="{{ path('auftragsverarbeitung') }}">{% trans %}orderProcessing{% endtrans %}</a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'software' ? 'active' }}">
                        <a href="{{ path('software') }}">{% trans %}software{% endtrans %}</a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'forms' ? 'active' }}">
                        <a href="{{ path('forms') }}">{% trans %}forms{% endtrans %}</a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'vorfall' ? 'active' }}">
                        <a href="{{ path('vorfall') }}">{% trans %}incidents{% endtrans %}</a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'client_requests' ? 'active' }}">
                        <a href="{{ path('client_requests') }}">{% trans %}customerQuestions{% endtrans %}</a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'report' ? 'active' }}">
                        <a href="{{ path('report') }}">{% trans %}activities{% endtrans %}</a>
                    </li>
