                    </li>
                    <li>
                        <a href="{{ path('akademie_admin') }}">{% trans %}academy{% endtrans %}</a>
                    </li>
                    <li>
                        <a href="{{ path('team_dsb') }}">{% trans %}externalDsb{% endtrans %}</a>
                    </li>
                    <li>
                        <a href="{{ path('upload_new') }}">{% trans %}import{% endtrans %}</a>
                    </li>
                </ul>
            </li>
        {% endif %}
        {% if 'ROLE_ADMIN' in app.user.roles %}
            <li>
                <a href="#superAdminSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">{% trans %}superAdminArea{% endtrans %}</a>
                <ul class="collapse list-unstyled" id="superAdminSubmenu">
                    <li>
                        <a href="{{ path('manage_settings') }}">{% trans %}manageOdc{% endtrans %}</a>
                    </li>
                    <li>
                        <a href="{{ path('manage_teams') }}">{% trans %}manageTeams{% endtrans %}</a>
