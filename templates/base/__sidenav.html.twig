                    <li class="{{ app.request.attributes.get('_route') == 'policies' ? 'active' }}">
                        <a href="{{ path('policies') }}">{% trans %}policies{% endtrans %}</a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'kontakt' ? 'active' }}">
                        <a href="{{ path('kontakt') }}">{% trans %}contacts{% endtrans %}</a>
