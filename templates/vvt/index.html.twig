{% extends 'base.html.twig' %}

{% block CTA %}
    <a class="btn btn-indigo ml-1 btn-sm" href="{{ path('vvt_new') }}">
        <span>{% trans %}newProcessingActivity{% endtrans %}</span>
    </a>
{% endblock %}

{% block body %}
    <h2 class="h2-responsive">{% trans %}processingDirectory{% endtrans %}</h2>

    <div class="card card-body">
        <div class="table-responsive">
            <table id="data-table" class="table display table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col" title="{% trans %}processingActivityTypeHelp{% endtrans %}">{% trans %}type{% endtrans %}</th>
                    <th scope="col">{% trans %}name{% endtrans %}</th>
                    <th scope="col">{% trans %}basis{% endtrans %}</th>
                    <th scope="col" title="{% trans %}dataProtectionImpactAssessment{% endtrans %}">{% trans %}dataProtectionImpactAssessmentAvailable{% endtrans %}</th>
                    <th scope="col">{% trans %}deleteDeadlineCategory{% endtrans %}</th>
                    <th scope="col">{% trans %}department{% endtrans %}</th>
                    <th scope="col">{% trans %}product{% endtrans %}</th>
                    <th scope="col">{% trans %}status{% endtrans %}</th>
                    <th scope="col">{% trans %}assessment{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for v in vvt %}
                    <tr class="clickable-row" data-href='{{ path('vvt_edit',{'id':v.id}) }}'>
                        <th scope="row">{{ v.nummer }}</th>
                        <td>{{ v.auftragsverarbeitung? 'AV':'' }}<br>{{ v.jointControl? 'GV':'' }}</td>
                        <td>{{ v.name }}</td>
                        <td>{% for g in v.grundlage %}- {{ g.name }}<br>{% endfor %}</td>
                        <td>{{ v.activDsfa?'Ja':'Nein' }}</a></td>
                        <td>{% for k in v.kategorien %}{{k}}<br>{% endfor %}</td>
                        <td>{% if v.abteilung %}{{ v.abteilung.name }}{% endif %}</td>
                        <td>{% if v.produkt %}{% for p in v.produkt %}{{ p.name }}<br>{% endfor %}{% endif %}</td>
                        <td>
                            {% if v.approved %}
                                <span class="note-success p-1">{% trans %}approved{% endtrans %}</span>
                            {% else %}
                                {{ v.status.name }}
                            {% endif %}
                        </td>
                        <td>| E: {{ v.beurteilungEintrittString }}<br>| S: {{ v.beurteilungSchadenString }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {{ include('base/__snack.html.twig') }}
{% endblock %}