{% extends 'base.html.twig' %}
{% trans_default_domain 'loeschkonzept' %}

{% block CTA %}
    <a class="btn btn-primary ml-1 btn-sm" href="{{ path('app_loeschkonzept_new') }}">
        <span>{% trans %}deletionConcept.new{% endtrans %}</span>
    </a>
{% endblock %}

{% block body %}
    <h2 class="h2-responsive">{% trans %}deletionConcept.overview{% endtrans %}</h2>
    <div class="card card-body">
        <div class="table-responsive">
            <table id="data-table" class="table display table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">{% trans %}data.categories{% endtrans %}</th>
                    <th scope="col">{% trans %}data.dataTypes{% endtrans %}</th>
                    <th scope="col">{% trans %}deletionConcept.deadline.standard{% endtrans %}</th>
                    <th scope="col">{% trans %}deletionConcept.deadline.legal{% endtrans %}</th>
                    <th scope="col">{% trans %}data.storageLocations{% endtrans %}</th>
                    <th scope="col">{% trans %}deletionConcept.official{% endtrans %}</th>
                    <th scope="col">{% trans from 'general' %}overview{% endtrans %}</th>
                    {% include 'base/__inheritanceTHeaders.html.twig' with {currentTeam:currentTeam} %}
                </tr>
                </thead>
                <tbody>
                {% for l in loeschkonzepte %}
                    {% set visibleCategories = l.entity.getVisibleCategories %}
                    <tr class="clickable-row" data-href='{{ path('app_loeschkonzept_edit', {'id': l.entity.id}) }}'>
                        <td>{{ l.entity.id }}</td>
                        <td>{% for vv in visibleCategories %}{{ vv.name }}<br>{% endfor %}</td>
                        <td>{% for vv in visibleCategories %}{{ vv.datenarten }}<br>{% endfor %}</td>
                        <td>{{ l.entity.standartlf }}</td>
                        <td>{{ l.entity.loeschfrist }}</td>
                        <td>{{ l.entity.speicherorte }}</td>
                        <td>{{ l.entity.loeschbeauftragter }}</td>
                        <td>
                            <a href="{{ path('app_loeschkonzept_show', {'id': l.entity.id}) }}">{% trans from 'general' %}show{% endtrans %}</a>
                        </td>
                        {% include 'base/__inheritanceTCols.html.twig' with {team:l.entity.team, currentTeam:currentTeam, inherited:l.isVvtInheriting, used:l.isVvtInheritanceEnabled} %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

